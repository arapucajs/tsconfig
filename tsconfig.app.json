{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./",
    "outDir": "./build",
    "types": ["bun-types", "node", "@types/node"],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": ["./"],
  "exclude": ["node_modules", "build", "dist", "test", "tests", "test/**/*", "tests/**/*"]
}
